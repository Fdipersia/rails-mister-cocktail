<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>New Cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add cocktail" %>
      <% end %>
  
      <div  class= "btn btn-base">
        <%= link_to root_path do%>
          <i class="far fa-hand-point-left btn-lg"></i>
        <% end %>
      </div>
      
    </div>
  </div>
</div>

