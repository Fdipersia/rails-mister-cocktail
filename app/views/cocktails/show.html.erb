<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-md-4">
      <% if @cocktail.photo.present? %>
        <%= cl_image_tag @cocktail.photo, height: 400, width: 300, crop: :fill %>
      <% end %>
    </div>
    <div class="col-md-3">
      <table> 
        <tr>
          <th>Ingredients:</th>
        </tr>
        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete the item?"} do %>
            <i class="far fa-trash-alt"></i>
            <% end %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-6">
      <h4>Add a new dose</h4>
      <%= render "doses/new", cocktail: @cocktail, dose: @dose%> 
    </div>
  </div>
    <div  class= "btn btn-base">
      <%= link_to root_path do%>
        <i class="far fa-hand-point-left btn-lg"></i>
      <% end %>
    </div>
</div>