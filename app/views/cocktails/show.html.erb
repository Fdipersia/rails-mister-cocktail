<div class="container">
  <div class="row">
    <div class="col-md-12" style="text-align: center">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-6">

      <h3>Ingredients:</h3>
      <ol> 
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> - <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete the item?"} do %>
          <i class="far fa-trash-alt"></i>
          <% end %>
        </li>
        <% end %>
      </ol>
    </div>
    <div class="col-md-6">
      <h4>Add a new dose</h4>
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
  <div class="col-md-12" style="text-align: center">
    <div  class= "btn btn-success">
      <%= link_to "Go baack", root_path %>
    </div>
  </div>
</div>